<% provide(:title, 'Task Detail') %>
<h1>Title: <%= @todo.title %></h1>

<h2>Description:</h2>
<p><%= @todo.description %></p>

<p>
	Last Modified: <%= @todo.updated_at.strftime("%B %e, %Y %H:%M") %>
</p>

<%= link_to 'Back', todos_path, class: 'btn btn-primary' %>
<%= link_to 'Edit', edit_todo_path, class: 'btn btn-warning' %>