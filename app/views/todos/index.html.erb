<h1>All Tasks</h1>

<table class="table table-responsive">
	<tr>
		<th>Title</th>
		<th>Description</th>
		<th>Last Modified</th>
	</tr>

	<% @todos.each do |todo| %>
	  <tr>
  	  <td><%= link_to todo.title, todo_path(todo) %></td>
  	  <td><%= todo.description %></td>
  	  <td><%= todo.updated_at.strftime('%B %e, %Y %H:%M') %></td>
  	  <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
  	  <td><%= link_to 'Delete', todo,
  	  method: :delete,
  	  data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Add', new_todo_path %>