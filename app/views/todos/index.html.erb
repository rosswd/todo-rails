<h1>All Tasks</h1>
<%= link_to "Add", new_todo_path %>
<table>
	<tr>
		<th>Title</th>
		<th>Description</th>
		<th>Last Modified</th>
	</tr>

	<% @todos.each do |todo| %>
  <tr>
  	<td><%= todo.title %></td>
  	<td><%= todo.description %></td>
  	<td><%= todo.updated_at %></td>
  	<td><%= link_to "Show", todo_path(todo) %></td>
  	<td><%= link_to "Edit", edit_todo_path(todo) %></td>
  	<td><%= link_to "Delete", todo,
  	  method: :delete,
  	  data: { confirm: "Are you sure?" } %></td>
  </tr>
  <% end %>
</table>