<% provide(:title, 'All Tasks') %>

<nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to 'Todo Rails', root_path, class: 'navbar-brand' %>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to 'Home', root_path %></li>
            <li class="active"><a href="#">Todos</a></li>
            <li><a href="#contact">Contact</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

<div class="container">

<h1>All Tasks</h1>

<table class="table table-responsive table-hover">
  <thead>
	  <tr>
		  <th>Title</th>
		  <th>Description</th>
		  <th>Last Modified</th>
	  </tr>
  </thead>
  <tbody>
	<% @todos.each do |todo| %>
	  <tr>
  	  <td><%= link_to todo.title, todo_path(todo) %></td>
  	  <td><%= todo.description %></td>
  	  <td><%= todo.updated_at.strftime('%B %e, %Y %H:%M') %></td>
      <td>
        <%= link_to edit_todo_path(todo), class: 'btn btn-default btn-sm' do %>
        Edit
        <%= content_tag(:span, "", class: 'glyphicon glyphicon-pencil') %>
        <% end %>
      </td>
      <td><%= link_to todo,
        method: :delete,
        data: { confirm: 'Are you sure?' },
        class: 'btn btn-success btn-sm' do %> Done
        <%= content_tag(:span, "", class: 'glyphicon glyphicon-ok') %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Add Task', new_todo_path, class: 'btn btn-primary btn-lg' %>
</div>